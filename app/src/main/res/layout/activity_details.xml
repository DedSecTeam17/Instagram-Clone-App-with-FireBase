<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mohamed.firebase.PostDeatils">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/singlepost_pic"
            android:layout_width="match_parent"
            android:layout_height="242dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/art" />



        <TextView
            android:id="@+id/singlepost_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="TextView" />

        <TextView
            android:id="@+id/singlepost_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"

            android:text="TextView" />

        <TextView
            android:id="@+id/singlepost_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"

            android:text="MyText" />

        <Button
            android:id="@+id/delete_post"
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:layout_margin="30dp"
            android:background="@drawable/buttonstyle"
            android:text="@string/delete"
            android:textColor="#fff" />
    </LinearLayout>

</android.support.v7.widget.CardView>
